<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tpersson.client.core.views.pages.userprofile.UserProfilePageView">
   <children>
      <VBox alignment="CENTER" maxWidth="300.0" prefWidth="300.0" spacing="10.0">
         <children>
            <Label fx:id="fullNameLabel" text="[Full Name]">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" text="[Username]" />
            <Label fx:id="emailLabel" text="[E-mail]" />
            <Button fx:id="signOutButton" mnemonicParsing="false" onAction="#signOutAction" text="Sign out">
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="messageLabel" text="[Message]">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            <ProgressIndicator fx:id="signOutProgressIndicator" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
